@model Teststation.Models.CandidateSessionViewModel

<table class="table">
    <thead>
        <tr>
            <th colspan="3">
                <h3>Alle Tests</h3>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var test in Model.Tests)
        {
            <tr>
                <td>
                    <h5>
                        <label>@test.Test.Topic</label>
                    </h5>
                </td>

                <td>
                    <h5>
                        @if (test.Completed && test.IsStarted)
                        {
                            <label>@(test.Result.ToString("P"))</label>
                        }
                    </h5>
                </td>
                <td>
                    <h5>
                        @if (test.Completed && test.IsStarted)
                        {
                            <a href="/Evaluation/Index?testId=@test.Test.Id" class="btn btn-primary">Details</a>
                        }
                        else if (!test.Completed && test.IsStarted)
                        {
                            <a href="/TestAnswer/Index?testId=@test.Test.Id" class="btn btn-primary">Fortsetzen</a>
                        }
                        else if (!test.Completed && !test.IsStarted)
                        {
                            <a href="/TestAnswer/Index?testId=@test.Test.Id" class="btn btn-primary">Test starten</a>
                        }
                    </h5>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">
                <h5>
                    <label>Gesamtpunktzahl:</label>
                </h5>
                <h4>
                    <label>@Model.ResultText</label>
                </h4>
            </td>
            <td>
                <h5>
                    <label>@Model.WholeResult</label>
                </h5>
            </td>
        </tr>
    </tfoot>
</table>