@model IEnumerable<Test>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Alle Tests</h1>
<table class="table">
    <thead>
        <tr>
            <th width="35%">
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th width="20%">
                @Html.DisplayNameFor(model => model.ReleaseStatus)
            </th>
            <th width="15%"></th>
            <th width="15%"></th>
            <th width="15%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var test in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => test.Topic)
                </td>
                @switch (test.ReleaseStatus)
                {
                    case TestStatus.InProgress:
                        <td>In Bearbeitung</td>
                        break;
                    case TestStatus.Public:
                        <td>Öffentlich</td>
                        break;
                    case TestStatus.Closed:
                        <td>Gesperrt</td>
                        break;
                    default:
                        <td>Fehler</td>
                        break;
                }

                @switch (test.ReleaseStatus)
                {
                    case TestStatus.InProgress:
                        <td>
                            <a asp-action="ReleaseTest" asp-route-id="@test.Id" class="btn btn-success buttonInMainList" onclick="return ConfirmReleaseTest('@test.Topic')">Veröffentlichen</a>
                        </td>
                        break;
                    case TestStatus.Public:
                        <td>
                            <a asp-action="CloseTest" asp-route-id="@test.Id" class="btn btn-warning buttonInMainList" onclick="return ConfirmCloseTest('@test.Topic')">Sperren</a>
                        </td>
                        break;
                    case TestStatus.Closed:
                        <td>
                            <button class="btn btn-warning buttonInMainList" disabled>Sperren</button>
                        </td>
                        break;
                    default:
                        <td>
                            Fehler
                        </td>
                        break;
                }

                <td>
                    @if (test.ReleaseStatus == TestStatus.InProgress)
                    {
                        <a asp-action="Edit" asp-route-id="@test.Id" class="btn btn-info buttonInMainList">Bearbeiten</a>
                    }
                    else
                    {
                        <button class="btn btn-info buttonInMainList" disabled>Bearbeiten</button>
                    }
                </td>
                <td>
                    @if (test.ReleaseStatus == TestStatus.InProgress || test.ReleaseStatus == TestStatus.Closed)
                    {
                        <a asp-action="Delete" asp-route-id="@test.Id"
                           class="btn btn-danger buttonInMainList" onclick="return ConfirmDeleteTest('@test.Topic');">Löschen</a>
                    }
                    else
                    {
                        <button class="btn btn-danger buttonInMainList" disabled>Löschen</button>
                    }
                </td>
            </tr>
        }
        <tr>
            <td colspan="5">
                <a asp-action="Create" class="btn btn-primary buttonInMainList">Neuen Test erstellen</a>
            </td>
        </tr>
    </tbody>
</table>
