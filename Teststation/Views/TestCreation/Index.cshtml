@model IEnumerable<Test>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Alle Tests</h1>
<table class="table">
    <thead>
        <tr>
            <th width="35%">
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th width="20%">
                @Html.DisplayNameFor(model => model.ReleaseStatus)
            </th>
            <th width="15%"></th>
            <th width="15%"></th>
            <th width="15%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            @switch (item.ReleaseStatus)
            {
                case TestStatus.InProgress:
                    <td>In Bearbeitung</td>
                    break;
                case TestStatus.Public:
                    <td>Öffentlich</td>
                    break;
                default:
                    <td>Fehler</td>
                    break;
            }


            <td>
                @if (item.ReleaseStatus == TestStatus.InProgress)
                {
                    <a asp-action="Release" asp-route-id="@item.Id" class="btn btn-success buttonInMainList" onclick="return ConfirmReleaseTest('@item.Topic')">Veröffentlichen</a>
                }
                else
                {
                    <environment include="Development">
                        <a asp-action="Regress" asp-route-id="@item.Id" class="btn btn-success buttonInMainList">Privatisieren</a>
                    </environment>
                    <environment exclude="Development">
                        <button class="btn btn-success buttonInMainList" disabled>Veröffentlichen</button>
                    </environment>
                }
            </td>
            <td>
                @if (item.ReleaseStatus == TestStatus.InProgress)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info buttonInMainList">Bearbeiten</a>
                }
                else
                {
                    <button class="btn btn-info buttonInMainList" disabled>Bearbeiten</button>
                }
            </td>
            <td>
                @if (item.ReleaseStatus == TestStatus.InProgress)
                {
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger buttonInMainList" onclick="return ConfirmDeleteTest('@item.Topic');">Löschen</a>
                }
                else
                {
                    <button class="btn btn-danger buttonInMainList" disabled>Löschen</button>
                }
            </td>
        </tr>
        }
        <tr>
            <td colspan="5">
                <a asp-action="Create" class="btn btn-primary buttonInMainList">Neuen Test erstellen</a>
            </td>
        </tr>
    </tbody>
</table>
