@model QuestionCreationViewModel
@{
    if (Model.Choices == null)
    {
        Model.Choices = new List<Choice>();
    }
}
    <div class="Choices-Block">
        @for (int i = 0; i < Model.Choices.Count; i++)
        {
            <input name="model.Questions[@(Model.Position)].Choices[@(i)].Id" type="text" class="form-control" value="@Model.Choices[i].Id" hidden />
            <input name="model.Questions[@(Model.Position)].Choices[@(i)].QuestionId" type="text" class="form-control" value="@Model.Choices[i].QuestionId" hidden />
            <div class="row">
                <div class="col-sm-8">
                    <input name="model.Questions[@(Model.Position)].Choices[@(i)].Text" type="text" class="form-control" value="@Model.Choices[i].Text" />
                </div>
                <div class="col-sm-3">
                    <input class="form-check-input inline-buttons form-control" asp-for="Choices[i].Correct" name="model.Questions[@(Model.Position)].Choices[@(i)].Correct" />
                </div>
                <div class="col-sm-1">
                    <button type="submit" class="btn btn-danger glyphicon glyphicon-remove inline-buttons" asp-action="DeleteChoice" asp-route-id="@Model.Choices[i].Id"></button>
                </div>
            </div>
        }
        <button asp-action="AddChoice" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Antwortmöglichkeit hinzufügen</button>
    </div>