@model Teststation.Models.MathAnswer
<div class="row">
    <div class="col-sm-6">
        <div class="questionText form-control">@Model.GetQuestion().Text</div>
    </div>
    <div class="col-sm-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text mathAnswerInEvaluation">Geforderte Antwort:</span>
            </div>
            <div class="questionText form-control answerTextInEvaluation">@Model.Question.CorrectAnswer</div>
        </div>        
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
    </div>
    <div class="col-sm-4">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                @if (Model.IsCorrect())
                {
                    <span class="input-group-text correctAnswer mathAnswerInEvaluation">Deine Antwort:</span>
                }
                else
                {
                    <span class="input-group-text falseAnswer mathAnswerInEvaluation">Deine Antwort:</span>
                }                
            </div>
            <div class="questionText form-control answerTextInEvaluation">@Model.GivenAnswer</div>
        </div>
    </div>
</div>